{
  "name": "bulldash",
  "version": "1.0.0",
  "description": "BullMQ Monitoring Dashboard - Complete Solution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:packages\" \"npm run dev:ui\" \"npm run dev:express\"",
    "dev:packages": "concurrently \"npm run dev:core\" \"npm run dev:express-pkg\"",
    "dev:core": "cd packages/core && npm run dev",
    "dev:express-pkg": "cd packages/express && npm run dev",
    "dev:ui": "cd packages/ui && npm run dev",
    "dev:express": "cd examples/express && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:standalone": "concurrently \"npm run dev:packages\" \"npm run dev:frontend\"",

    "build": "npm run build:packages && npm run build:frontend",
    "build:packages": "npm run build --workspaces --if-present",
    "build:frontend": "cd frontend && npm run build",
    "build:watch": "npm run build:packages -- --watch",

    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts packages/*/src/**/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",

    "clean": "npm run clean:dist && npm run clean:node_modules",
    "clean:dist": "rm -rf packages/*/dist && rm -rf dist",
    "clean:node_modules": "rm -rf node_modules packages/*/node_modules",
    "fresh-install": "npm run clean && npm install",

    "publish:packages": "npm run build:packages && npm publish --workspaces",
    "version:packages": "npm version patch --workspaces"
  },
  "dependencies": {
    "bullmq": "^4.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
